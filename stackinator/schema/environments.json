{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack environments.yaml recipe file",
    "type": "object",
    "additionalProperties": false,
    "defs": {
        "gcc_version_spec": {
            "type": "string",
            "pattern": "^gcc@\\d{1,2}(\\.\\d{1}(\\.\\d{1})?)?$"
        },
        "env_var_def": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": { "type": "string" }
            },
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": false
        },
        "env_var_def_nullable": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                    "oneOf": [
                        {"type": "string"},
                        {"type": "null"}
                    ]
                }
            },
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": false
        }
    },
    "patternProperties": {
         "\\w[\\w-]*": {
             "type": "object",
             "required": ["compiler", "specs"],
             "additionalProperties": false,
             "properties": {
                 "deprecated": {
                     "type": "boolean",
                     "default": false
                 },
                 "unify": {
                     "enum": ["when_possible", true, false],
                     "default": true
                 },
                 "duplicates": {
                     "type": "object",
                     "required": ["strategy"],
                     "additionalProperties": false,
                     "properties": {
                         "strategy": {
                             "enum": ["minimal", "full", "none"]
                         }
                     },
                     "default": {
                         "strategy": "minimal"
                     }
                 },
                 "compiler": {
                     "type": "array",
                     "items": {
                         "type": "string",
                         "enum": ["gcc", "nvhpc", "llvm", "llvm-amdgpu"]
                     }
                 },
                 "specs": {
                     "type": "array",
                     "items": {"type": "string"}
                 },
                 "variants": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 },
                 "prefer": {
                    "oneOf": [
                        {
                             "type": "array",
                             "items": {"type": "string"},
                             "default": []
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                 },
                 "network": {
                     "type": "object",
                     "additionalProperties": false,
                     "default": {"mpi": null, "specs": null},
                     "properties": {
                         "mpi": {
                             "oneOf": [
                                 { "type": "string" },
                                 { "type": "null" }
                             ],
                             "default": null
                         },
                         "specs": {
                             "oneOf": [
                                 {
                                     "type": "array",
                                     "items": {"type": "string"}
                                 },
                                 {"type": "null"}
                             ],
                             "default": null
                         }
                     }
                 },
                 "packages": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 },
                 "views": {
                    "type": "object",
                    "default": {},
                    "patternProperties": {
                        "\\w+": {
                            "additionalProperties": false,
                            "comment": "we can't set default values in such a construction, so they are set inside stackinator",
                            "properties": {
                                "link": {
                                    "type": "string",
                                    "enum": ["roots", "all", "run"]
                                },
                                "select": {
                                    "type": "array",
                                    "items": {"type": "string"}
                                },
                                "exclude": {
                                    "type": "array",
                                    "items": {"type": "string"}
                                },
                                "projections": {
                                    "type": "object",
                                    "patternProperties": {
                                        "all|\\w[\\w-]*": {"type": "string"}
                                    }
                                },
                                "uenv": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "add_compilers": { "type": "boolean" },
                                        "prefix_paths": {
                                            "type": "object",
                                            "patternProperties": {
                                                "\\w+": {
                                                    "type": "array",
                                                    "items": {"type": "string"}
                                                }
                                            }
                                        },
                                        "env_vars": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "set": {
                                                    "type": "array",
                                                    "items": {"$ref": "#/defs/env_var_def_nullable"}
                                                },
                                                "prepend_path": {
                                                    "type": "array",
                                                    "items": {"$ref": "#/defs/env_var_def"}
                                                },
                                                "append_path": {
                                                    "type": "array",
                                                    "items": {"$ref": "#/defs/env_var_def"}
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                 }
             }
         }
    }
}

