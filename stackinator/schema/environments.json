{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack environments.yaml recipe file",
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
         "\\w[\\w-]*": {
             "type": "object",
             "required": ["compiler", "specs"],
             "additionalProperties": false,
             "properties": {
                 "deprecated": {
                     "type": "boolean",
                     "default": false
                 },
                 "unify": {
                     "enum": ["when_possible", true, false],
                     "default": true
                 },
                 "compiler": {
                     "type": "array",
                     "items": {
                         "type": "object",
                         "additionalProperties": false,
                         "properties": {
                             "toolchain": {"type": "string"},
                             "spec":      {"type": "string"}
                         }
                     }
                 },
                 "specs": {
                     "type": "array",
                     "items": {"type": "string"}
                 },
                 "variants": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 },
                 "mpi": {
                     "oneOf": [
                         {
                             "type": "object",
                             "additionalProperties": false,
                             "properties": {
                                 "spec": {"type": "string"},
                                 "gpu":  {
                                     "enum": ["cuda", "rocm", null, false],
                                     "default": null
                                 }
                             }
                         },
                         {"enum": [null, false]}
                     ],
                     "default": null
                 },
                 "packages": {
                     "type": "array",
                     "items": {"type": "string"},
                     "default": []
                 },
                 "views": {
                    "type": "object",
                    "default": {},
                    "patternProperties": {
                        "\\w+": {
                            "additionalProperties": false,
                            "comment": "we can't set default values in such a construction, so they are set inside stackinator",
                            "properties": {
                                "link": {
                                    "type": "string",
                                    "enum": ["roots", "all", "run"]
                                },
                                "select": {
                                    "type": "array",
                                    "items": {"type": "string"}
                                },
                                "exclude": {
                                    "type": "array",
                                    "items": {"type": "string"}
                                },
                                "projections": {
                                    "type": "object",
                                    "patternProperties": {
                                        "all|\\w[\\w-]*": {"type": "string"}
                                    }
                                },
                                "uenv": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "add_compilers": { "type": "boolean" },
                                        "prefix_paths": {
                                            "type": "object",
                                            "patternProperties": {
                                                "\\w+": {
                                                    "type": "array",
                                                    "items": {"type": "string"}
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                 }
             }
         }
     }
}

