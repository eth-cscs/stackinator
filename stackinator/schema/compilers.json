{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack compilers.yaml recipe file",
    "type": "object",
    "additionalProperties": false,
    "required": ["gcc"],
    "properties": {
        "gcc": {
            "type": "object",
            "properties": {
                "version": {"type": "string"}
            },
            "additionalProperties": false,
            "required": ["version"]
        },
        "nvhpc": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "version": {"type": "string"}
                    },
                    "additionalProperties": false,
                    "required": ["version"]
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        },
        "llvm": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "version": {"type": "string"}
                    },
                    "additionalProperties": false,
                    "required": ["version"]
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        },
        "llvm-amdgpu": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "version": {"type": "string"}
                    },
                    "additionalProperties": false,
                    "required": ["version"]
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        }
    }
}

