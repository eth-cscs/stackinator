{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack compilers.yaml recipe file",
    "type": "object",
    "additionalProperties": false,
    "required": ["gcc"],
    "defs": {
        "gcc_version_spec": {
            "type": "string",
            "pattern": "^gcc@\\d{1,2}(\\.\\d{1}(\\.\\d{1})?)?$"
        },
        "nvhpc_version_spec": {
            "type": "string",
            "pattern": "^nvhpc@\\d{2}(\\.\\d{1,2})?$"
        }
    },
    "properties": {
        "gcc": {
            "type": "object",
            "properties": {
                "spec": {"$ref": "#/defs/gcc_version_spec"}
            },
            "additionalProperties": false,
            "required": ["spec"]
        },
        "nvhpc": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "spec": {"$ref": "#/defs/nvhpc_version_spec"}
                    },
                    "additionalProperties": false,
                    "required": ["spec"]
                },
                {
                    "type": "null"
                }
            ],
            "default": null
        }
    }
}

