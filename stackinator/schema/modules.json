{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for Stackinator constraints on Spack Modules modules.yaml",
  "type" : "object",
  "required": ["modules"],
  "properties" : {
    "modules" : {
      "type": "object",
      "properties": {
        "default": {
          "type": "object",
          "default": {"arch_folder": false},
          "properties": {
            "roots": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "tcl": {
                  "type": "string"
                }
              }
            },
            "arch_folder": {
              "type": "boolean",
              "const": false,
              "default": false
            }
          }
        }
      }
    }
  }
}

